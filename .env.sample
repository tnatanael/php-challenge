ENV=dev|prod

# JWT Settings
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=3600

# Database Settings
DB_HOST=mysql
DB_PORT=3306
DB_NAME=stock_app
DB_USERNAME=stock_user
DB_PASSWORD=stock_password

# Email Settings
MAILER_DSN=smtp://username:password@smtp.example.com:587
MAILER_FROM=your-email@example.com
MAILER_FROM_NAME="Stock API"
MAILER_ENABLED=1

# RabbitMQ Settings (optional service disabled by default)
RMQ_ENABLED=0
RMQ_HOST=localhost
RMQ_VHOST=/
RMQ_PORT=5672
RMQ_USERNAME=guest
RMQ_PASSWORD=guest

# Test credentials, used for placeholder, shouldn't be used on production
DEFAULT_USERNAME=user@example.com
DEFAULT_PASSWORD=user123